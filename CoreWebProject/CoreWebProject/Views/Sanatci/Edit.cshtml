@model CoreWebProject.Models.Sanatcilar

<div class="container" style="margin-top:100px">
        
    <h4>Sanatçılar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SanatciId" />
            <div class="form-group">
                Sanatçı
                <input asp-for="SanatciAd" class="form-control" />
                <span asp-validation-for="SanatciAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                Cinsiyet
                <input asp-for="SanatciCinsiyet" class="form-control" />
                <span asp-validation-for="SanatciCinsiyet" class="text-danger"></span>
            </div>
            <div class="form-group">
                Yaş
                <input asp-for="Yas" class="form-control" />
                <span asp-validation-for="Yas" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Güncelle" class="btn btn-primary" /> <a asp-action="Index">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</div>