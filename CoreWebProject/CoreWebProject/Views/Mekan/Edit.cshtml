@model CoreWebProject.Models.Mekanlar

 <div class="container" style="margin-top:100px">
<h4>Mekanlar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MekanId" />
            <div class="form-group">
                <label asp-for="MekanAdi" class="control-label"></label>
                <input asp-for="MekanAdi" class="form-control" />
                <span asp-validation-for="MekanAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Il" class="control-label"></label>
                <input asp-for="Il" class="form-control" />
                <span asp-validation-for="Il" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ilce" class="control-label"></label>
                <input asp-for="Ilce" class="form-control" />
                <span asp-validation-for="Ilce" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="AcikAdres" class="control-label"></label>
                <input asp-for="AcikAdres" class="form-control" />
                <span asp-validation-for="AcikAdres" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Güncelle" class="btn btn-primary" /><a asp-action="Index">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>
