@model CoreWebProject.Models.Mekanlar


     <div class="container" style="margin-top:100px">

     <h4>Mekanlar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Mekan
                <input asp-for="MekanAdi" class="form-control" />
                <span asp-validation-for="MekanAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                İl
                <input asp-for="Il" class="form-control" />
                <span asp-validation-for="Il" class="text-danger"></span>
            </div>
            <div class="form-group">
                İlçe
                <input asp-for="Ilce" class="form-control" />
                <span asp-validation-for="Ilce" class="text-danger"></span>
            </div>
            <div class="form-group">
                Açık Adres
                <input asp-for="AcikAdres" class="form-control" />
                <span asp-validation-for="AcikAdres" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Mekan Ekle" class="btn btn-primary" /><a asp-action="Index">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

    </div>