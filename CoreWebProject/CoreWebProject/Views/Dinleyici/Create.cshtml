@model CoreWebProject.Models.Dinleyiciler
<div class="container" style="margin-top:100px">
<h4>Dinleyiciler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Ad Soyad
                <input asp-for="AdSoyad" class="form-control" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                Koltuk No
                <input asp-for="KoltukNo" class="form-control" />
                <span asp-validation-for="KoltukNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                Yaş
                <input asp-for="Yas" class="form-control" />
                <span asp-validation-for="Yas" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Ekle" class="btn btn-primary" /><a asp-action="Index">Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</div>